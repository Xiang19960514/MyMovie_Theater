@model Movie_Theater.Models.Classes

@{
    ViewData["Title"] = "Edit";
}

@section Styles
{
    <style>
        textarea {
            height: 150px;
            resize: none;
        }
    </style>
}

<h1 class="text-center my-4">類型編輯</h1>

<div class="container">
    <div class="card shadow-sm" style="background-color: #ffe4e1;">
        <div class="card-body">
           @*  <h4 class="card-title">類型編輯</h4>
            <hr /> *@
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="ClassId" />
                <div class="form-group mb-3">
                    <label asp-for="ClassName" class="form-label"></label>
                    <input asp-for="ClassName" class="form-control" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-lg" style="background-color: #dc143c; color: white; border-radius: 50px; padding: 10px 30px; font-size: 1.2em;" />
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
