@model Movie_Theater.Models.TicketTypes

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Ticket Type</h1>

<h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
<div class="container">
    <div class="card shadow-sm" style="background-color: #fffaf0;">
        <div class="card-body">
            <h4 class="card-title">Ticket Type Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TypeName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TypeName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.HowManySeatForType)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.HowManySeatForType)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TicketDescription)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TicketDescription)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>
            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="TicketTypeId" />
                <input type="submit" value="Delete" class="btn btn-lg btn-danger" style="border-radius: 25px; padding: 10px 30px; font-size: 1.2em;" /> |
                <a asp-action="Index" class="btn btn-secondary btn-lg" style="border-radius: 25px; padding: 10px 30px; font-size: 1.2em;">Back to List</a>
            </form>
        </div>
    </div>
</div>