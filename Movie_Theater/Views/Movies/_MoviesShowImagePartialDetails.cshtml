@model MoviesViewModel

@{
    var movieImage = Model.MovieImage;
    var containsHttp = movieImage != null && movieImage.Contains("http", StringComparison.OrdinalIgnoreCase);
}

@if (Model.MovieImage == null)
{
    <img src="~/images/No_Image.jpg" title="尚無圖案" style="width:600px;height:715px" class="my-3" />
}
else
{
    if (containsHttp)
    {
        <img src="@Model.MovieImage" title="@Model.MovieName" style="width:600px;height:715px" class="my-4" />
    }
    else
    {
        <img src="~/images/@Model.MovieImage" title="@Model.MovieName" style="width:600px;height:715px" class="my-3" />
    }
}
