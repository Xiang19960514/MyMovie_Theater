@model MoviesViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Movie</h1>

<h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
<div class="container">
    <div class="card shadow-sm" style="background-color: #ffe4e1;">
        <div class="card-body">
            <h4 class="card-title">Movie Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MovieName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MovieName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MovieEnglishName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MovieEnglishName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MovieDescription)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MovieDescription)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ReleaseDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Runtime)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Runtime)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Level)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Level)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Language)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Language)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MovieImage)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MovieImage)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Movievideo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Movievideo)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DirectorName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DirectorName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MovieState)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MovieState)
                </dd>
            </dl>
            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="MovieId" />
                <input type="submit" value="Delete" class="btn btn-lg btn-danger" style="padding: 10px 30px; font-size: 1.2em;" /> 
                <a asp-action="Index" class="btn btn-secondary btn-lg" style="padding: 10px 30px; font-size: 1.2em;">Back to List</a>
            </form>
        </div>
    </div>
</div>
