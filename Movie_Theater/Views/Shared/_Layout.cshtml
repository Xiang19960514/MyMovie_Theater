<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie_Theater</title>
    <!-- 引入 Bootstrap 5 樣式表 -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
          asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- 引入 font-awesome 圖標庫 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />
    <!-- 自定義樣式表 -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <div class="wrapper">
        <!-- 側邊欄 start -->
        <aside id="sidebar">
            <!-- 側邊欄的標誌和切換按鈕 start -->
            <div class="d-flex">
                <a asp-controller="Home" asp-action="Index" class="toggle-btn" type="button">
                    <!-- <i class="lni lni-grid-alt"></i> -->
                    <i class="fa-solid fa-house-chimney"></i>
                </a>
                <div class="sidebar-logo">
                    <a asp-controller="Home" asp-action="Index">如影隨行</a>
                </div>
            </div>
            <!-- 側邊欄的標誌和切換按鈕 end -->
            <ul class="sidebar-nav" data-bs-parent="#sidebar">
                <!-- 側邊欄的各個連結 start -->
                <li class="sidebar-item">
                    <a asp-controller="Theaters" asp-action="Index" class="sidebar-link">
                        <i class="fa-solid fa-tv"></i>
                        <span>影城管理</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Auditoriums" asp-action="Index" class="sidebar-link">
                        <i class="fa-solid fa-couch"></i>
                        <span>影廳管理</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Movies" asp-action="Index" class="sidebar-link">
                        <i class="fa-solid fa-film"></i>
                        <span>電影管理</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Shows" asp-action="Index" class="sidebar-link">
                        <i class="fa-solid fa-video"></i>
                        <span>場次管理</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Bookings" asp-action="Index" class="sidebar-link">
                        <i class="fa-regular fa-rectangle-list"></i>
                        <span>訂單查詢</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Chat" asp-action="Chat" class="sidebar-link">
                        <i class="fa-solid fa-phone"></i>
                        <span>客服聊天室</span>
                    </a>
                </li>              
                <li class="sidebar-item">
                    <a asp-controller="Users" asp-action="GetPie" class="sidebar-link">
                        <i class="fa-solid fa-chart-line"></i>
                        <span>數據分析</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Classes" asp-action="Index" class="sidebar-link">
                        <i class="fa-solid fa-layer-group"></i>
                        <span>電影類型管理</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Actors" asp-action="Index" class="sidebar-link">
                        <i class="fa-solid fa-users-gear"></i>
                        <span>演員管理</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#backend-management" aria-expanded="false" aria-controls="backend-management">
                        <i class="fa-regular fa-rectangle-list"></i>
                        <span>後臺管理</span>
                    </a>
                    <!-- 多層子選單 start -->
                    <ul id="backend-management" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-controller="Users" asp-action="Index" class="sidebar-link">
                                <i class="fa-solid fa-user-check"></i>
                                <span>會員管理</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="TicketTypes" asp-action="Index" class="sidebar-link">
                                <i class="fa-solid fa-ticket"></i>
                                <span>訂票管理</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Snacks" asp-action="Index" class="sidebar-link">
                                <i class="fa-solid fa-utensils"></i>
                                <span>餐點管理</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Comments" asp-action="Index" class="sidebar-link">
                                <i class="fa-regular fa-comment"></i>
                                <span>評論管理</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Habbits" asp-action="Index" class="sidebar-link">
                                <i class="fa-solid fa-ranking-star"></i>
                                <span>興趣管理</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Coupons" asp-action="Index" class="sidebar-link">
                                <i class="fa-solid fa-sack-dollar"></i>
                                <span>折扣管理</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Admins" asp-action="Index" class="sidebar-link">
                                <i class="fa-solid fa-building-user"></i>
                                <span>管理員維護</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-controller="Roles" asp-action="Index" class="sidebar-link">
                                <i class="fa-solid fa-address-book"></i>
                                <span>角色維護</span>
                            </a>
                        </li>
                    </ul>
                    <!-- 多層子選單 end -->
                </li>
                <!-- 側邊欄的各個連結 end -->
            </ul>
            <div class="sidebar-footer">
                <a href="#" class="sidebar-link">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>
        <!-- 側邊欄 end -->
        <div class="main">
            <!-- 導航欄 start -->
            <partial name="_LoginPartial" />
            @* <nav class="navbar navbar-expand px-3 border-bottom">
                <button class="btn" id="sidebar-toggle" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0">
                                <img src="~/images/account.png" class="avatar img-fluid rounded" alt="">
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a href="#" class="dropdown-item">修改資料</a>
                                <a href="#" class="dropdown-item">設定</a>
                                <hr>
                                <a href="#" class="dropdown-item">登出</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav> *@
            <!-- 導航欄 end -->
            <!-- 主頁面 start -->
            <div class="container-fluid">
                <main role="main" class="content px-3 py-2">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </main>
            </div>

            <!-- 主頁面 end -->
        </div>
    </div>
    <!-- 引入 Jquery 程式庫 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- 引入 Bootstrap 5 程式庫 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- 自定義JS -->
    <script src="~/js/layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
