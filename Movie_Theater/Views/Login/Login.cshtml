@model Login_ViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>登入頁面</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- sweetalert2樣式 -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.1/dist/sweetalert2.min.css" rel="stylesheet" />
    <style>
        body,
        html {
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #343a40;
            color: #ffffff;
        }

        .login-container {
            width: 500px;
            max-width: 400px;
            padding: 2rem;
            background: #495057;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .form-label,
        .form-control {
            color: #ffffff;
        }

        .form-control {
            background-color: #6c757d;
            border: none;
        }

        .form-control:focus {
            background-color: #6c757d;
            color: #ffffff;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <h2 class="text-center mb-4">登入</h2>
        <form asp-action="Login">
            <div class="form-floating my-3">
                <input asp-for="Account" type="text" class="form-control" placeholder="請輸入帳號" required>
                <label asp-for="Account" class="form-label">帳號</label>
            </div>
            <div class="form-floating my-3">
                <input asp-for="AdminPassword" type="password" class="form-control" id="password" placeholder="請輸入密碼" required>
                <label asp-for="AdminPassword" class="form-label">密碼</label>
            </div>
            <button type="submit" class="btn btn-primary w-100">登入</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/form_validation.js"></script>
    <!-- sweetalert2套件 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.1/dist/sweetalert2.all.min.js"></script>
    <script>
        window.onload = function () {
            // 取得後端錯誤訊息
            var exist = {
                errorCode: 0,
                errorMessage: ""
            };
            exist.errorCode = @Html.Raw(ViewBag.userExist.errorCode);
            exist.errorMessage = '@Html.Raw(ViewBag.userExist.errorMessage)';

            switch (exist.errorCode) {
                case 1:   // 帳號不存在
                    Swal.fire({
                        title: exist.errorMessage,
                        icon: "warning",
                        timer: 1500
                    });
                    break;
                case 2:   // 密碼錯誤
                    Swal.fire({
                        title: exist.errorMessage,
                        icon: "error",
                        timer: 1500,
                    });
                    break;
                default:
                    break;
            }
        };
        
    </script>
</body>


</html>